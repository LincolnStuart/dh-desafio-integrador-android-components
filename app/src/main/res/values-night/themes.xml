<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DesafioIntegradorAndroidComponentes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_200</item>
        <item name="colorPrimaryVariant">@color/black_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PrimaryButton">
        <item name="android:background">@drawable/bg_primary_button_dark</item>
        <item name="android:textColor">@color/red_500</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:background">@drawable/bg_secondary_button_dark</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="SocialButton">
        <item name="android:background">@drawable/bg_social_button_dark</item>
        <item name="android:textColor">@color/grey_200</item>
    </style>

    <style name="separator">
        <item name="android:layout_marginTop">@dimen/separator_margin</item>
        <item name="android:background">@color/grey_100</item>
    </style>

</resources>