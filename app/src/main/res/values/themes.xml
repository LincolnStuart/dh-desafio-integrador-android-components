<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DesafioIntegradorAndroidComponentes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PrimaryButton">
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:background">@drawable/bg_secondary_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SocialButton">
        <item name="android:background">@drawable/bg_social_button</item>
    </style>

    <style name="GoogleButton" parent="SocialButton">
        <item name="android:paddingStart">@dimen/margem_botao_com_icone</item>
        <item name="android:paddingEnd">@dimen/margem_botao_com_icone</item>
        <item name="android:drawableLeft">@drawable/ic_google_account</item>
    </style>

    <style name="separator">
        <item name="android:layout_marginTop">@dimen/margem_divisor</item>
        <item name="android:background">@color/grey_200</item>
    </style>

    <style name="DefaultCardView">
        <item name="android:layout_margin">16dp</item>
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">@dimen/arredondamento_card</item>
        <item name="cardElevation">@dimen/elevacao_card</item>
    </style>

    <style name="DefaultTitle">
        <item name="android:layout_margin">@dimen/margem_titulo_card</item>
        <item name="android:textSize">@dimen/tamanho_titulo</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>