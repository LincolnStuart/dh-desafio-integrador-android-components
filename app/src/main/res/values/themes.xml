<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DesafioIntegradorAndroidComponentes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PrimaryButton">
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:background">@drawable/bg_secondary_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SocialButton">
        <item name="android:background">@drawable/bg_social_button</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="GoogleButton" parent="SocialButton">
        <item name="android:paddingStart">@dimen/button_with_image_padding</item>
        <item name="android:paddingEnd">@dimen/button_with_image_padding</item>
        <item name="android:drawableLeft">@drawable/ic_google_account</item>
    </style>

    <style name="Separator">
        <item name="android:layout_marginTop">@dimen/separator_margin</item>
        <item name="android:background">@color/grey_200</item>
    </style>

    <style name="DefaultCardView">
        <item name="android:layout_margin">16dp</item>
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="DefaultTitle">
        <item name="android:layout_margin">@dimen/title_card_margin</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainTitle">
        <item name="android:layout_margin">@dimen/title_card_margin</item>
        <item name="android:textSize">@dimen/main_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleImage" parent="DefaultTitle">
        <item name="android:background">@drawable/bg_image_text</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/image_title_size</item>
    </style>

    <style name="BackButton">
        <item name="srcCompat">@drawable/ic_back_button</item>
        <item name="android:layout_margin">@dimen/back_button_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>