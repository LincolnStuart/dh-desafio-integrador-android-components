<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        style="@style/DefaultCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_item_restaurante_foto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tamanho_imagem_restaurante"
                android:contentDescription="@string/foto_do_restaurante"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tv_item_restaurante_nome"
                style="@style/DefaultTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/iv_item_restaurante_foto"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/iv_item_restaurante_foto"
                app:layout_constraintTop_toBottomOf="@id/iv_item_restaurante_foto"
                tools:text="Restautante A" />

            <TextView
                android:id="@+id/tv_item_restaurante_endereco"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margem_informacao_card"
                android:layout_marginBottom="@dimen/margem_informacao_card"
                app:layout_constraintEnd_toEndOf="@id/tv_item_restaurante_nome"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/tv_item_restaurante_nome"
                app:layout_constraintTop_toBottomOf="@id/tv_item_restaurante_nome"
                tools:text="Rua X, 999. Bairro Y." />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margem_informacao_card"
                android:layout_marginBottom="@dimen/margem_informacao_card"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/tv_item_restaurante_endereco"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/tv_item_restaurante_endereco"
                app:layout_constraintTop_toBottomOf="@id/tv_item_restaurante_endereco"
                tools:text="Fecha Ã s 20:00" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>